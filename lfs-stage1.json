{
  "builders": [
    {
      "name": "lfs-stage1",
      "type": "virtualbox-ovf",
      "source_path": "output-lfs-stage0/packer-lfs-stage0.ovf",
      "ssh_username": "root",
      "ssh_password": "packer",
      "shutdown_command": "shutdown -h -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "LFS=/mnt/lfs"
      ],
      "scripts": [
        "provisioners/stage1/3_1_introduction.sh",
        "provisioners/stage1/4_2_creating_the_lfs_tools_directory.sh",
        "provisioners/stage1/4_3_adding_the_lfs_user.sh"
      ]
    },
    {
      "type": "shell",
      "execute_command": "chmod +x {{ .Path }}; su - lfs -c {{ .Path }}",
      "script": "provisioners/stage1/4_4_setting_up_the_environment.sh"
    },
    {
      "type": "shell",
      "inline": ["hostname packer-lfs-stage1"]
    }
  ]
}
