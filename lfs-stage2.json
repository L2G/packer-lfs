{
  "builders": [
    {
      "name": "lfs-stage2",
      "type": "virtualbox-ovf",
      "source_path": "output-lfs-stage1/packer-lfs-stage1.ovf",
      "ssh_username": "lfs",
      "ssh_password": "lfs",
      "headless": "true",
      "shutdown_command": "echo 'lfs' | sudo -S shutdown -h -P now"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "provisioners/stage2/5.4_binutils_2.24_pass_1.bash",
        "provisioners/stage2/5.5_gcc_4.8.2_pass_1.bash",
        "provisioners/stage2/5.6_linux_3.13.9_api_headers.bash",
        "provisioners/stage2/5.7_glibc_2.19.bash",
        "provisioners/stage2/5.8_libstdc++_4.8.2.bash",
        "provisioners/stage2/5.9_binutils_2.24_pass_2.bash"
      ]
    },
    {
      "type": "shell",
      "execute_command": "echo 'lfs' | sudo -S bash {{.Path}}",
      "inline": ["echo 'packer-lfs-stage2' > /etc/hostname"]
    },
    {
      "type": "shell",
      "script": "provisioners/zero.sh"
    }
  ]
}
